/* pages/mindmap/mind.wxss */

.mind-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0rpx 20rpx 0rpx 20rpx;
}
.mindMap {
  border: rgb(148, 145, 140) dashed 2rpx;
  height: fit-content;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: left;
  background-color: green;

}
.mindMap f6-canvas {
  background-color: white;
}
.node-input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: fit-content;
  padding-top: 10rpx;
}
.node-input button {
  border: burlywood solid 2rpx;
  font-weight: lighter;
  border-radius: 3rpx;
}
.node-input textarea {
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: burlywood solid 2rpx;
  border-radius: 3rpx;
}