/**index.wxss**/
.container {
  min-height: 1200rpx;
  height: fit-content;
  background-color: rgba(243, 240, 225, 0.932);
}
.content {
  height: 600rpx;
  font-weight: lighter;
  font-style: normal;
  display: flex;
  flex-direction: column;
}
.edit {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  margin-top: 20rpx;
}
.note {
  height: 120rpx;
  width: 700rpx;
  border-radius: 5%;
  background-color: rgb(233, 220, 220);

  text-align: left;
  text-indent: 20rpx;
}


.edit_menu {
  width: 700rpx;
  height: fit-content;
  margin: 25rpx 25rpx 25rpx 25rpx;
  font-size: 24rpx;
  font-style: oblique;

  display: flex; 
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
}
.edit_ele {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.edit_menu button {
  width: fit-content;

  text-align:center;
  background-color: rgba(238, 223, 182, 0.637);
  border-radius: 20%;
  margin: 0rpx 25rpx 0rpx 25rpx
}

.show_notes{
  display: flex;
  flex-direction: column-reverse;
}
.usernotes {
  height: auto;
  border-radius: 5%;
  border-bottom: 3rpx dashed rgb(216, 213, 213);
  margin: 50rpx 30rpx 0rpx 30rpx;
  padding-bottom: 20rpx;
  text-indent: 40rpx;
  font-weight: lighter;
}